apiVersion: apps/v1
kind: Deployment
metadata: 
  name: sample-nginx
  labels: 
     app: nginx
spec: 
  replicas: 2
  selector: 
    matchLabels: 
      app: nginx
  template:
    metadata:
      labels:
         app: nginx
    spec:
      containers: 
      - name: nginx
        image: ugander/nginx:1
        env:
         - name: DB-PORT
           valueFrom: 
            configMapRef: 
             name: db-port
             key: db-port
        ports:
           containerPort: 8000
